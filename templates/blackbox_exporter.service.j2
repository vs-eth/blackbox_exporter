[Unit]
Description=Prometheus blackbox exporter

[Service]
Type=simple
User={{ blackbox_user }}
Group={{ blackbox_user }}
ExecStart={{ blackbox_dir }}/blackbox_exporter --web.listen-address="{{ blackbox_listen_address }}" --config.file="{{ blackbox_dir }}/blackbox.yml"

[Install]
WantedBy=multi-user.target
